generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Float
  date      DateTime
  images    Json
  category  String
  order     Int
  createdAt DateTime @default(now())
}

